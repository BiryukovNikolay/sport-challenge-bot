{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "database/*": ["src/database/*"],
      "data/*": ["src/models/*"],
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
